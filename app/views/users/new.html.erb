<!-- app/views/sessions/new.html.erb -->

<div class="flex min-h-full flex-col items-start-start px-6 py-4 lg:px-8">

  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-2xl/9 font-bold tracking-tight text-gray-900">Create a new account</h2>
  </div>
  <%= form_with model: @user, class: "mt-10 sm:mx-auto sm:w-full sm:max-w-sm" do |form| %>
    <div>
      <%= form.label :email_address, class: "block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :email, required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6" %>
      </div>
    </div>
    <hr>
    <div>
      <%= form.label :name, class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.text_field :name, required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6" %>
    </div>
    <hr>
    <div>
      <%= form.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.password_field :password, required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6" %>
    </div>
    <hr>
    <div>
      <%= form.label :password_confirmation, class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.password_field :password_confirmation, required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6" %>
    </div>
    <hr>
    <div>
      <%= form.submit 'Sign Up', class: "flex w-full justify-center rounded-md button-primary px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2" %>
    </div>
    <% if flash[:error] %>
      <% # user.messages.each do |error| %>
        <div><%= flash[:error] %></div>
      <% # end %>
    <% end %>
  <% end %>
</div>

