<h2><%= @user.name %></h2>
<%= form_with url: subscription_path(@user), method: :post do %>
  <%= submit_tag "Subscribe"%>
<% end %>
<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>
<hr>

<!-- Shift this code into a partial -->
<% @user.posts.each do |post| %>
  <h3><%= link_to post.title, post_path(post) %></h3>
  <hr>
<% end %>
<h3>Comments</h3>
<%= render partial: "comments/comment", collection: @user.comments %>
<%= render partial: "comments/comment_new", locals: { commentable: @user } %>
