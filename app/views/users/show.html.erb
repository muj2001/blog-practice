<h2><%= @user.name %></h2>
<hr>
<!-- Shift this code into a partial -->
<% @user.posts.each do |post| %>
    <h3><%= link_to post.title, post_path(post) %></h3>
  <hr>
<% end %>
<h3>Comments</h3>
<% @user.received_comments.each do | comment | %>
  <p><strong><%= comment.commenter.name %>:</strong> <%= comment.body %></p>
<% end %>
