  <div class="px-12 pt-12 pb-4 bg-secondary">
    <div class="flex justify-between items-center">
      <h2 class="text-white oswald-font text-5xl font-medium"><%= @user.name %></h2>
      <%= form_with url: subscription_path(@user), method: :post do %>
        <%= submit_tag "Subscribe", class: "button-primary text-white py-2 px-4 rounded"%>
      <% end %>
    </div>
  </div>
  <div>
    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>
    <%= render partial: "posts/post_bar", collection: @user.posts, as: :post %>
  </div>
  <h3 class="py-6 comments-title text-white oswald-font text-2xl px-12 ">Comments</h3>
  <div class="px-12 py-4">
    <%= render partial: "comments/comment", collection: @user.comments %>
    <%= render partial: "comments/comment_new", locals: { commentable: @user } %>
    <!-- -->
  </div>
