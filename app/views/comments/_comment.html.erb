<div class="flex items-center py-2 gap-x-2">
  <p><strong><%= comment.user.name %></strong>: </p>
  <p class="comment text-white rounded-3xl px-4 py-2"><%= comment.body %></p>
  <% if is_user_s?(comment) %>
    <%= form_with url: polymorphic_path([comment.commentable, comment]), method: :delete do %>
      <%= submit_tag "Delete", class: "button-primary text-white py-2 px-4 rounded" %>
    <% end %>
  <% end %>
</div>
