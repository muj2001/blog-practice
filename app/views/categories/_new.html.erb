<li class="flex justify-between gap-x-6 py-5 px-6">
  <div class="flex flex-1 min-w-0 gap-x-4">
    <%= form_with model: @category, local: true, class: "flex items-center gap-x-4 text-sm/12 font-semibold text-gray-900" do |form| %>
      <%= form.label "New Category:" %>
      <div class="rounded-lg overflow-hidden border-secondary">
        <%= form.text_field :name, class: "border-none", placeholder: "Category Name" %>
        <%= form.submit "Add", class: "button-secondary py-2 px-4 text-white" %>
      </div>
    <% end %>
  </div>
</li>
