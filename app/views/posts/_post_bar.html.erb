<li class="flex justify-between gap-x-6 py-5 px-6">
  <div class="flex min-w-0 gap-x-4">
    <div class="min-w-0 flex-auto">
      <p class="text-sm/6 font-semibold text-gray-900"><%= link_to post.title, post_path(post) %></p>
      <p class="mt-1 truncate text-xs/5 text-gray-500">Categories:
        <% post.categories.each_with_index do |category, index| %>
          <% if index == post.categories.size - 1 %>
            <%= category.name %>
          <% else %>
            <%= category.name %>,
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
    <p class="text-sm/6 text-gray-900">Author: <%= link_to post.user.name, user_path(post.user) %></p>
    <p class="mt-1 text-xs/5 text-gray-500">Last edited at <time datetime="2023-01-23T13:23Z"><%= post.updated_at %></time></p>
  </div>
</li>
