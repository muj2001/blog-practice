<div class="flex justify-between p-4">
  <ul class="flex items-center">
    <li><%= link_to "Home", root_path, class: "text-gray-500 hover:text-gray-700 px-4 py-2" %></li>
    <li><%= link_to "Bloggers", users_path, class: "text-gray-500 hover:text-gray-700 px-4 py-2" %></li>
    <li><%= link_to "Categories", categories_path, class: "text-gray-500 hover:text-gray-700 px-4 py-2" %></li>
    <li><%= link_to "Blogs", posts_path, class: "text-gray-500 hover:text-gray-700 px-4 py-2" %></li>
  </ul>

  <div class="flex flex-1 justify-end gap-x-4">
    <% unless logged_in? %>
      <%= button_to "Login", login_path, method: :get, class: "button-primary text-white py-2 px-4 rounded hover:primary-button-hover" %>
      <%= button_to "Sign up", new_user_path, method: :get, class: "button-primary text-white py-2 px-4 rounded" %>
    <% else %>
      <%= form_with url: logout_path, method: :delete do %>
        <%= submit_tag "Logout", class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700" %>
      <% end %>
    <% end %>
  </div>
</div>
