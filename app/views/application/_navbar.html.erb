<%= link_to "Home", root_path, class: "text-blue-500 hover:text-blue-700 px-4 py-2" %>
<%= link_to "Bloggers", users_path, class: "text-blue-500 hover:text-blue-700 px-4 py-2" %>
<%= link_to "Categories", categories_path, class: "text-blue-500 hover:text-blue-700 px-4 py-2" %>
<%= link_to "Blogs", posts_path, class: "text-blue-500 hover:text-blue-700 px-4 py-2" %>

<% unless logged_in? %>
<%= button_to "Login", login_path, method: :get, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
<%= button_to "Sign up", new_user_path, method: :get, class: "bg-green-500 text-white py-2 px-4 rounded hover:bg-green-700" %>
<% else %>
<%= form_with url: logout_path, method: :delete do %>
  <%= submit_tag "Logout", class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700" %>
<% end %>
<p class="mt-4 text-gray-700">Logged in as <%= get_user.name %>.</p>
<% end %>
