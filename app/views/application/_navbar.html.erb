<div class="flex justify-between items-center py-4 px-12">
  <%= render partial: "toggle_navbar" %>
  <ul class="hidden shrink-0 lg:flex gap-x-20 items-center flex-1">
    <li><%= link_to "Home", root_path, class: "text-gray-500 hover:text-gray-700 px-0 py-2" %></li>
    <li><%= link_to "Bloggers", users_path, class: "text-gray-500 hover:text-gray-700 px-0 py-2" %></li>
    <li><%= link_to "Categories", categories_path, class: "text-gray-500 hover:text-gray-700 px-0 py-2" %></li>
    <li><%= link_to "Blogs", posts_path, class: "text-gray-500 hover:text-gray-700 px-0 py-2" %></li>
  </ul>

  <div class="flex flex-1 justify-end gap-x-4">
    <% unless logged_in? %>
      <%= button_to "Login", login_path, method: :get, class: "button-primary text-white py-2 px-4 rounded hover:primary-button-hover" %>
      <%= button_to "Sign up", new_user_path, method: :get, class: "button-primary text-white py-2 px-4 rounded" %>
    <% else %>
      <%= form_with url: logout_path, method: :delete do %>
        <%= submit_tag "Logout", class: "button-primary text-white py-2 px-4 rounded" %>
      <% end %>
    <% end %>
  </div>
</div>
